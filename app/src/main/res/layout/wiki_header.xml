<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <sssta.org.hakeday.BezelImageView
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_frag"
        app:borderDrawable="@drawable/wiki_image_border"
        app:maskDrawable="@drawable/bezel_circle_mask"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/bezelImageView" />

    <TextView
        android:textColor="@color/textLightColor"
        android:textSize="24dp"
        android:text="hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/bezelImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.48000002"
        android:id="@+id/text_cn_name" />

    <TextView
        android:textSize="9dp"
        android:id="@+id/text_en_name"
        android:textColor="@color/textPrimaryColor"
        tools:text="hello world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_cn_name"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_cn_name" />
</android.support.constraint.ConstraintLayout>