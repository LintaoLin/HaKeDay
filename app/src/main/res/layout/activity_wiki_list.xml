                android:src="@drawable/hk_locked"
                android:layout_margin="@dimen/wikiImageMargin"
                android:layout_width="@dimen/wikiImageSize"
                android:layout_height="@dimen/wikiImageSize" />
            <sssta.org.hakeday.HKImageView
                android:src="@drawable/hk_locked"
                android:layout_margin="@dimen/wikiImageMargin"
                android:layout_width="@dimen/wikiImageSize"
                android:layout_height="@dimen/wikiImageSize" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
